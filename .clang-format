# 基础样式
BasedOnStyle: LLVM          # 基于LLVM的样式
IndentWidth: 4              # 缩进宽度为4
UseTab: Never               # 使用空格而不是Tab
ColumnLimit: 80             # 每行最大长度

# 缩进设置
IndentCaseLabels: true      # 缩进case标签
IndentPPDirectives: None    # 预处理指令缩进风格
NamespaceIndentation: None  # 命名空间缩进

# 大括号设置
BreakBeforeBraces: Linux    # Linux风格的大括号
BraceWrapping:
  AfterFunction: true       # 函数后的大括号换行
  AfterStruct: false       # 结构体后的大括号不换行
  AfterClass: false        # 类后的大括号不换行

# 空格设置
SpaceAfterCStyleCast: false # 在C风格转换后不添加空格
SpaceBeforeParens: ControlStatements # 控制语句的括号前加空格
SpaceInEmptyParentheses: false # 空括号中不加空格
SpacesInCStyleCastParentheses: false # C风格转换的括号中不加空格

# 对齐设置
AlignConsecutiveMacros: true    # 对齐连续的宏定义
AlignConsecutiveAssignments: false # 不对齐连续的赋值
AlignTrailingComments: true     # 对齐尾随注释

# 换行设置
AllowShortFunctionsOnASingleLine: None  # 不允许短函数写在一行
AllowShortIfStatementsOnASingleLine: false # 不允许if语句写在一行
KeepEmptyLinesAtTheStartOfBlocks: false  # 不保留块开始的空行
MaxEmptyLinesToKeep: 1          # 最多保留1个空行